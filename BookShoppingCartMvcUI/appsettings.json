/*appsettings.json дозволяє централізовано управляти конфігураційними параметрами ASP.NET Core 
додатку, забезпечуючи простий та зручний спосіб налаштовувати різні аспекти його роботи.*/
{
  /*Цей розділ містить рядок підключення до бази даних. Програма використовуває цей рядок для з'єднання 
  з базою даних. В даному випадку, параметри включають сервер (Server), назву бази даних (Database), 
  використання довіреного підключення (Trusted_Connection), дозвіл на отримання декількох активних 
  результатів (MultipleActiveResultSets), і довірення сертифікату сервера (TrustServerCertificate).*/
  "ConnectionStrings": {
    "DefaultConnection": "Server=DESKTOP-HRKS8LT;Database=BookShoppingMvc;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },
  /*Визначає налаштування журналювання для вашого додатку. У цьому випадку рівень журналювання для 
  різних компонентів вказано як "Information", але для компонентів Microsoft.AspNetCore рівень вказано 
  як "Warning". Це визначає, які повідомлення журналувати і в якому рівні.*/
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  /*Дозволяє всім хостам обслуговувати додаток. Це є простим і демонстративним налаштуванням для 
  дозволу доступу від усіх хостів.*/
  "AllowedHosts": "*"
}
